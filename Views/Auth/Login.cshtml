@{
    ViewData["Title"] = "Login učitele";
    Layout = "~/Views/Shared/Layouts/_Auth.cshtml"; ;
}


<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
<link href="~/css/global.css" rel="stylesheet" asp-append-version="true"/>

<form asp-controller="Auth" asp-action="Login" onkeydown="return event.key != 'Enter';">
    <div class="container" style="min-width: 320px;">
        <div class="row headContainer justify-content-center gap-3">
            <img class="logo" src=".\image\logo\spsul.webp" />
            <h1 class="Header">SPSUL</h1>
        </div>
            <div class="row">
            <div class="col">
                <label for="name">Jméno</label>
                <input type="text" id="NickName" name="NickName" class="form-control input" placeholder="Jméno" required autocomplete="off" />
            </div>
        </div>
        <div class="row mt-2">
            <div class="col">
                <label for="Password">Heslo</label>
                <input type="password" id="Password" name="Password" class="form-control input" placeholder="Heslo" required autocomplete="off" />
            </div>
        </div>
        <div class="row mt-1 text-end">
            <div class=col>
                <a class="link-primary" asp-controller="Auth" asp-action="Test">Jsem student</a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button class="btn btn-primary w-100"><span class="boldWhite">Přihlásit se</span></button>
            </div>
        </div>
        <hr class="mt-3" />
    </div>
</form>