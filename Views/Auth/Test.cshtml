@{
    ViewData["Title"] = "Přihlášení k testu";
    Layout = "~/Views/Shared/Layouts/_Auth.cshtml"; ;
}


<link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
<link href="~/css/global.css" rel="stylesheet" asp-append-version="true" />


<form asp-action="" onkeydown="return event.key != 'Enter';">
    <div class="container" style="min-width: 320px;">
        <div class="row headContainer justify-content-center">
            <img class="logo" src=".\image\logo\spsul.webp" />
            <h1 class="Header">SPSUL</h1>
        </div>
        <div class="row">
            <div class="col">
                <label for="TestId">Číslo testu</label>
                <input type="text" id="TestId" name="TestId" class="form-control input" placeholder="Číslo testu" required autocomplete="off" />
            </div>
        </div>
        <div class="row mt-1 text-end">
            <div class="col d-flex gap-2 justify-content-between">
                <a class="link-primary" asp-controller="Test" asp-action="Example">Příkladový test</a>
                <a class="link-primary" asp-controller="Auth" asp-action="Login">Jsem učitel</a>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button class="btn btn-primary w-100"><span class="boldWhite">Začít test</span></button>
            </div>
        </div>
        <hr class="mt-3" />
    </div>
</form>