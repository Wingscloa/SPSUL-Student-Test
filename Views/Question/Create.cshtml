@using SPSUL.Models.Display.Question
@model QuestCreateVM
@{
    ViewData["Title"] = "Otázky";
    Layout = "~/Views/Shared/Layouts/_Main.cshtml";
}
<script src="~/js/question.js" asp-append-version="true"></script>
<link href="~/css/create.css" rel="stylesheet" />

<div class="createContainer">
    <div class="createPanel">
        <h1>Vytvoření otázky</h1>
        <div class="row">
            <div class="col-3">
                <label class="configLabel" for="Header">
                    <span class="bi bi-file-earmark-medical-fill me-1"></span>Nadpis
                </label>
                <input class="configInput" autocomplete="off" placeholder="Zadej nadpis otázky" name="Header" id="Header" />
            </div>
            <div class="col-6">
                <label class="configLabel" for="Description">
                    <span class="bi bi-file-earmark-medical-fill me-1"></span>Popis
                </label>
                <input class="configInput" autocomplete="off" placeholder="Zadej popis otázky" name="Description" id="Description" />
            </div>
            <div class="col-3">
                <label class="configLabel" for="Description">
                    <span class="bi bi-file-earmark-medical-fill me-1"></span>Popis
                </label>
                <select class="select2 form-select configInput" id="QuestionTypeId">
                    @foreach (var qt in Model.QuestionTypes)
                    {
                        <option value="@qt.QuestionTypeId">@qt.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>
</div>
