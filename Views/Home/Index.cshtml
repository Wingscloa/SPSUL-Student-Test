@{
    ViewData["Title"] = "Tvoř Testy";
    Layout = "~/Views/Shared/Layouts/_Main.cshtml";
}
<link rel="stylesheet" href="~/css/home.css" />

@section Scripts {
    <script src="~/lib/chart.js/chart.umd.js"></script>
}

<div class="homeContainer">
    <div class="tests-grid">
