                    </table>
                </div>
            </div>
        </section>
        <section class="statsContainer">
            <div class="stats-grid">
                <div class="stats-item stats-item--xl bg-students">
                    <h1 class="gridHeader" onclick="location.href='/Students/Index'">Studenti</h1>
                </div>
                <div class="stats-item stats-item--wide bg-tests" onclick="location.href='/Question/Index'">
                    <h1 class="gridHeader">Seznam testů</h1>
                </div>
                <div class="stats-item bg-score" onclick="location.href='/Detail/Index'">
                    <h1 class="gridHeader">Výsledky testů</h1>
                </div>
                <div class="stats-item bg-questions" onclick="location.href='/Test/Create'">
                    <h1 class="gridHeader">Vytvořit test</h1>
                </div>
            </div>
        </section>
    </div>
